<%= provide(:title, "Order Items") %>

<div class='my-3'>
  <h2>Order Items</h2>
</div>

  <div class="card d-flex display:block mx-auto">
    <table class="table table-striped table-bordered mb-0">
      <thead>
        <tr>
          <th scope="col">Purchase Order</th>
          <!--<th scope="col">Purchase Order total</th>-->
          <th scope="col">Order item</th>
          <th scope="col">Item title</th>
          <th scope="col">Item description</th>
          <th scope="col">Item price</th>
          <th scope="col">Item quantity</th>
          <th scope="col">Item total price</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
    
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= link_to ('Purchase Order ' + order_item.purchase_order.id.to_s), purchase_order_path(order_item.purchase_order_id) %></td>
            <!--<td><%#= order_item.purchase_order.total %></td>-->
            <td><%= link_to ('Order Item ' + order_item.id.to_s), purchase_order_order_item_path(order_item.purchase_order_id, order_item) %></td>
            <td><%= order_item.item_title %></td>
            <td><%= order_item.item_description %></td>
            <td><%= order_item.item_price %></td>
            <td><%= order_item.item_quantity %></td>
            <td><%= order_item.item_quantity * order_item.item_price %></td>
            <!--<td><#%= order_item.item_image_url %></td>-->
            <td><%= link_to 'Delete', [order_item.purchase_order, order_item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <br>
</div>
