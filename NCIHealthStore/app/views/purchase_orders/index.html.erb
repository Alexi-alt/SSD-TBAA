<%= provide(:title, "Purchase Orders") %>

<div class='my-3'>
  <h2>Purchase Orders</h2>
</div>

<div class="card d-flex display:block mx-auto">
  <table class="table table-striped table-bordered mb-0">
    <thead>
      <tr>
        <th scope="col">Purchase Order Id</th>
        <th scope="col">Client number</th>
        <th scope="col">Delivery address</th>
        <th scope="col">Delivery city</th>
        <th scope="col">Delivery country</th>
        <th scope="col">Total</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
  
    <tbody>
      <% @purchase_orders.each do |purchase_order| %>
        <tr>
          <td><%= link_to ("Purchase Order " + purchase_order.id.to_s), purchase_order%></td>
          <td><%= purchase_order.client_number %></td>
          <td><%= purchase_order.delivery_address %></td>
          <td><%= purchase_order.delivery_city %></td>
          <td><%= purchase_order.delivery_country %></td>
          <td><%= purchase_order.total %></td>
          <td><%= link_to 'Delete', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Purchase Order', new_purchase_order_path, class:'btn btn-primary' %>

